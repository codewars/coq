#!/bin/bash
set -eu

if [ -z "${CONTAINER_ENGINE:+x}" ]; then
	CONTAINER_ENGINE=docker
fi

W=/workspace

# Create container
C=$($CONTAINER_ENGINE container create --rm -w $W ghcr.io/codewars/coq:latest sh -c "coqc Solution.v && coqc -I /opt/coq_codewars/src -R /opt/coq_codewars/theories CW SolutionTest.v")

# Copy files from the current directory
# example/Solution.v
# example/SolutionTest.v
$CONTAINER_ENGINE container cp examples/${1:-passing}/. $C:$W

# Run tests
$CONTAINER_ENGINE container start --attach $C
